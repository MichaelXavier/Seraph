name:                Seraph
version:             0.0.0
synopsis:            Rewrite of Angel
-- description:
license:             MIT
license-file:        LICENSE
author:              Michael Xavier
maintainer:          michael@michaelxavier.net
-- copyright:
category:            System
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable seraph
  main-is: Seraph/Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends: base >=4.6
  build-depends: mvc
  build-depends: containers
  build-depends: mtl
  build-depends: lens
  build-depends: process >= 1.2.0.0
  build-depends: unix >= 2.7.0.1
  build-depends: configurator >= 0.2.0.2
  build-depends: stm
  build-depends: split
  build-depends: errors
  hs-source-dirs: src
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: src, test
  build-depends: base >=4.6
  build-depends: mvc
  build-depends: containers
  build-depends: mtl
  build-depends: tasty
  build-depends: tasty-quickcheck
  build-depends: QuickCheck
  build-depends: derive
  build-depends: lens
  ghc-options: -threaded -with-rtsopts=-N4
